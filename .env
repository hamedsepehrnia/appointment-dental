# ===========================================
# تنظیمات محیطی پروژه سیستم نوبت‌دهی دندانپزشکی
# ===========================================

# ===========================================
# تنظیمات دیتابیس MySQL
# ===========================================
DATABASE_URL="mysql://root:password@localhost:3306/appointment_dental"
# PROVIDER=mysql


# ===========================================
# تنظیمات سرور
# ===========================================
PORT=4000
NODE_ENV=development

# ===========================================
# تنظیمات Session و امنیت
# ===========================================
SESSION_SECRET=your-super-secret-session-key-change-this-in-production-make-it-long-and-random
SESSION_MAX_AGE=2592000000

# ===========================================
# تنظیمات سرویس SMS کاوه‌نگار
# ===========================================
KAVENEGAR_API_KEY=477A765765377A6E536669746D34454F41314C44655844494B39797868363544515137556D6F69634667733D
KAVENEGAR_SENDER=2000660110
OTP_TEMPLATE=verify
# تنظیم حالت لاگ: اگر true باشد، کدهای OTP به جای ارسال پیامک در لاگ سرور نمایش داده می‌شوند
# این گزینه برای جلوگیری از مصرف شارژ پنل پیامک در محیط توسعه مفید است
SMS_LOG_ONLY=true

# ===========================================
# تنظیمات OTP
# ===========================================
# زمان انقضای کد OTP به ثانیه (مثال: 300 = 5 دقیقه)
OTP_EXPIRY_SECONDS=300

# ===========================================
# تنظیمات CORS
# ===========================================
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000,http://127.0.0.1:3001,http://127.0.0.1:3000,http://127.0.0.1:5173,http://localhost:5173

# ===========================================
# تنظیمات آپلود فایل
# ===========================================
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads

# ===========================================
# تنظیمات اضافی (اختیاری)
# ===========================================
# برای تنظیمات خاص محیط production
# NODE_ENV=production
# SESSION_SECRET=your-production-secret-key
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
